# AI Image Decoder Configuration

# Server Configuration
HOST=0.0.0.0
PORT=9000

# Database Configuration
DATABASE_PATH=./data/images.db

# Storage Configuration
THUMBNAIL_PATH=./data/thumbnails
MAX_THUMBNAIL_SIZE=512

# Thumbnail Configuration
THUMBNAIL_ENABLED=true
THUMBNAIL_SIZE=256
THUMBNAIL_QUALITY=85

# Scanning Configuration
SCAN_RECURSIVE=true
SCAN_INTERVAL=3600

# Logging Configuration
LOG_LEVEL=info

# Stable Diffusion / CLIP Service Configuration
STABLE_DIFFUSION_BASE_URL=http://127.0.0.1:7860
CLIP_TIMEOUT_SECS=30
CLIP_ENABLED=true

# Auto CLIP Interrogation on Ingestion
# When enabled, automatically runs CLIP interrogation on images that don't have embedded prompts
# This can slow down ingestion significantly, but ensures all images have prompts
AUTO_CLIP_ON_INGESTION=false
